@model FrotaSisWeb.Models.SisModels.SisMarcas

@{
    ViewData["Title"] = "Delete";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5>Deseja excluir a marca selecionada?</h5>
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</button>
        </div>
        <div class="modal-body">
            <div class="form-group form-row">
                <div class="col-md-2">
                    <label asp-for="IdMarca" class="control-label"><b>Id</b></label>
                    <input class="form-control form-control-sm bg-white" type="text" asp-for="IdMarca" readonly />
                </div>
                <div class="col-md-10">
                    <label asp-for="DescMarca" class="control-label">Descrição</label>
                    <input asp-for="DescMarca" class="form-control form-control-sm bg-white" readonly />
                    <span asp-validation-for="DescMarca" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdMarca" />
                <button type="submit" class="btn btn-danger">
                    <i class="far fa-trash-alt"></i> Excluir
                </button>
                <!--<input type="submit" value="Excluir" class="btn btn-danger" />-->
                <a asp-action="Index" class="btn btn-light"><i class="fas fa-times-circle"></i> Cancelar</a>
            </form>
        </div>
    </div>
</div>

