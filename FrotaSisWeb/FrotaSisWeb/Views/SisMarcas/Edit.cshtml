@model FrotaSisWeb.Models.SisModels.SisMarcas

@{
    ViewData["Title"] = "Edit";
}

<div class="">
    <!--<h3>Cadastro de Marcas</h3>-->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Marcas</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar Marca</li>
        </ol>
    </nav>
    <div class="container-fluid">
        <form asp-action="Edit">
            <div class="card" style="width: 35rem">
                <div class="card-header">
                    <h5>Editar Marca</h5>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group form-row">
                        <div class="col-md-2">
                            <label asp-for="IdMarca" class="control-label"><b>Id</b></label>
                            <input class="form-control form-control-sm" type="text" asp-for="IdMarca" readonly />
                        </div>
                        <div class="col-md-10">
                            <label asp-for="DescMarca" class="control-label">Descrição</label>
                            <input asp-for="DescMarca" class="form-control form-control-sm" />
                            <span asp-validation-for="DescMarca" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-check form-check-inline">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Usacadmat" /> @Html.DisplayNameFor(model => model.Usacadmat)
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <div class="checkbox">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Usacadveic" /> @Html.DisplayNameFor(model => model.Usacadveic)
                                </label>
                            </div>
                        </div>
                        <div class="form-check form-check-inline">
                            <div class="checkbox">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Salvar
                    </button>
                    <!--<input type="submit" value="Salvar" class="btn btn-primary">-->
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times-circle"></i> Cancelar</a>                    
                </div>
            </div>
        </form>
    </div>    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
