@model FrotaSisWeb.Models.SisModels.SisMarcas

@{    
    Layout = null;
    ViewData["Title"] = "Details";
    ViewBag.Title = "Details";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5>Marca - Detalhes</h5>
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
            <div class="form-group form-row">
                <div class="col-md-2">
                    <label asp-for="IdMarca" class="control-label"><b>Id</b></label>
                    <input class="form-control form-control-sm bg-white" type="text" asp-for="IdMarca" readonly />
                </div>
                <div class="col-md-10">
                    <label asp-for="DescMarca" class="control-label">Descrição</label>
                    <input asp-for="DescMarca" class="form-control form-control-sm bg-white" readonly />
                    <span asp-validation-for="DescMarca" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check form-check-inline">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Usacadmat" disabled /> @Html.DisplayNameFor(model => model.Usacadmat)
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <div class="checkbox">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Usacadveic" disabled /> @Html.DisplayNameFor(model => model.Usacadveic)
                        </label>
                    </div>
                </div>
                <div class="form-check form-check-inline">
                    <div class="checkbox">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Ativo" disabled /> @Html.DisplayNameFor(model => model.Ativo)
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.IdMarca"><i class="fas fa-edit"></i> Editar</a> 
            <a asp-action="Index" class="btn btn-light"><i class="fas fa-times-circle"></i> Fechar</a>
        </div>
    </div>
</div>

